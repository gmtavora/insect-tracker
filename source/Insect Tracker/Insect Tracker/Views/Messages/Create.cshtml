@model Insect_Tracker.Models.Message

@{
    ViewData["Title"] = "Messages";
    Layout = "_LayoutDashboard";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Message</h4>
<hr />
