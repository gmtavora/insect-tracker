    <title>Home</title>

    <!-- favicon -->
    <link rel="icon" type="image/x-icon" href="images/icons8-inseto-24.png" />
    <!-- fontawesome icons-->
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <!-- google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
