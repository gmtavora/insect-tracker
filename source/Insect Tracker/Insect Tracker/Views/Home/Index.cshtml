<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="page-top">Insect Tracker</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="Identity/Account/Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead">
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-8 align-self-end">
                    <h1 class="text-white font-weight-bold">Insect Tracker</h1>
                    <hr class="divider" />
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 mb-5">Insect Tracker is a free, open source application that helps you manage your software development team.</p>
                    <a class="btn btn-primary btn-xl" hreaf="#about">Find out more.</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Services -->
    <section class="page-section" id="services">
        <div class="container px-4 px-lg-5">
            <h2 class="text-center mt-0">Benefits</h2>
            <hr class="divider" />
            <div class="row gx-4 gx-lg-5">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class="far fa-gem fs-1 text-primary"></i></div>
                        <h4 class="mb-2">Quality</h4>
                        <p class="text-muted mb-0">Raise the quality of your products</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class="fas fa-laptop fs-1 text-primary"></i></div>
                        <h4 class="mb-2">Comunication</h4>
                        <p class="text-muted mb-0">Improve the communication of your staff</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class="fas fa-globe-europe fs-1 text-primary"></i></div>
                        <h4 class="mb-2">Productivity</h4>
                        <p class="text-muted mb-0">Track your team's productivity</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <div class="mb-2"><i class="far fa-heart fs-1 text-primary"></i></div>
                        <h4 class="mb-2">Satisfy your customers</h4>
                        <p class="text-muted mb-0">Your clients will thank your company</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Github -->
    <section class="page-section bg-dark text-white">
        <div class="container px-4 px-lg-5 text-center">
            <h2 class="mb-4">Make a pull request on GitHub</h2>
            <a class="btn btn-light btn-xl" href="https://github.com/gmtavora/insect-tracker">GitHub</a>
        </div>
    </section>

    <footer class="bg-light py-5">
        <div class="container px-4 px-lg-5"><div class="small text-center text-muted">Copyright &copy; 2021 - Gabriel Távora</div></div>
    </footer>

    <script src="js/script.js"></script>
    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
